<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:elevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/cat_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/catttttt"/>

        <TextView
            android:id="@+id/cat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            app:layout_constraintStart_toEndOf="@id/cat_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Bertie"/>

        <TextView
            android:id="@+id/cat_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="6"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/cat_name"
            app:layout_constraintStart_toStartOf="@id/cat_name"/>
<!--
        <TextView
            android:id="@+id/cat_breed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Tabby"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/cat_age"
            app:layout_constraintStart_toStartOf="@id/cat_age"/>
-->

        <TextView
            android:id="@+id/cat_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Orange"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/cat_age"
            app:layout_constraintStart_toStartOf="@id/cat_age"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>